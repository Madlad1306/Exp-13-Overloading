#include <iostream>
using namespace std;

class Vector {
    double x, y;

public:
    Vector(double a = 0, double b = 0) {
        x = a;
        y = b;
    }

    // Overload + operator to add two vectors
    Vector operator + (const Vector &v) {
        return Vector(x + v.x, y + v.y);
    }

    void display() {
        cout << "<" << x << ", " << y << ">" << endl;
    }
};

int main() {
    Vector v1(3, 4);
    Vector v2(1, 2);

    Vector v3 = v1 + v2;  // Calls overloaded + operator

    cout << "Vector 1: ";
    v1.display();

    cout << "Vector 2: ";
    v2.display();

    cout << "Sum of Vectors: ";
    v3.display();

    return 0;
}

Vector 1: <3, 4>
Vector 2: <1, 2>
Sum of Vectors: <4, 6>
