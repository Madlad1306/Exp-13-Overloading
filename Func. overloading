#include <iostream>
using namespace std;

class Math {
public:
    // Function to add two integers
    int add(int a, int b) {
        return a + b;
    }

    // Function to add three integers
    int add(int a, int b, int c) {
        return a + b + c;
    }

    // Function to add two double numbers
    double add(double a, double b) {
        return a + b;
    }
};

int main() {
    Math m;

    cout << "Sum of 2 integers: " << m.add(5, 10) << endl;         // Calls add(int, int)
    cout << "Sum of 3 integers: " << m.add(2, 4, 6) << endl;       // Calls add(int, int, int)
    cout << "Sum of 2 doubles: " << m.add(2.5, 3.5) << endl;       // Calls add(double, double)

    return 0;
}

Sum of 2 integers: 15
Sum of 3 integers: 12
Sum of 2 doubles: 6
